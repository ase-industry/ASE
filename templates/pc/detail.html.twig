{% extends 'base.html.twig' %}

{% block title %}PC details{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <img src="{{ asset( 'images/' ~ details.photo) }}" height="150"/><br>
    <br>
    {{ details.brand }}<br>
    {{ details.model }}<br>
    {{ details.prix }} euro <br>
    {{ details.specification }}

    <p>
        <a href="{{ path('pc', { id: details.id }) }}">Back</a>
    </p>

{% endblock %}