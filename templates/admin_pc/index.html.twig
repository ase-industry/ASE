{% extends 'base.html.twig' %}

{% block title %}Pc index{% endblock %}

{% block body %}
    <h1>Pc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Prix</th>
                <th>Model</th>
                <th>Specification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pc in pcs %}
            <tr>
                <td>{{ pc.id }}</td>
                <td>{{ pc.brand }}</td>
                <td>{{ pc.prix }}</td>
                <td>{{ pc.model }}</td>
                <td>{{ pc.specification }}</td>
                <td>
                    <a href="{{ path('app_admin_pc_show', {'id': pc.id}) }}">show</a>
                    <a href="{{ path('app_admin_pc_edit', {'id': pc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_pc_new') }}">Create new</a>
{% endblock %}
